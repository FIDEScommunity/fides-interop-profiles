{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fides.community/schemas/interop-profiles/v2/interop-profile.schema.json",
  "title": "Interop Profile",
  "description": "Machine-readable description of an interoperability profile (e.g., DIIP, HAIP, SWIYU) and its key capability choices used for matrix-style comparisons. v2 aligns with the FIDES Interop Profile category set: Issuance Protocol, Remote Presentation Protocol, Credential Format, Credential Status, Identifiers, Key Binding, Signature Scheme, Signature Algorithm.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "profile",
    "capabilities"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "v2"
    },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "shortName",
        "version",
        "status",
        "specUrl"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable identifier for the profile entry (slug).",
          "pattern": "^[a-z0-9][a-z0-9\\-]*$"
        },
        "name": {
          "type": "string",
          "description": "Full name of the profile"
        },
        "shortName": {
          "type": "string",
          "description": "Short display name for the matrix (e.g., 'DIIP v5', 'HAIP v1')"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "stable",
            "deprecated"
          ]
        },
        "specUrl": {
          "type": "string",
          "format": "uri"
        },
        "publisher": {
          "type": "string"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "issuanceProtocol",
        "remotePresentationProtocol",
        "credentialFormat",
        "credentialStatus",
        "identifiers",
        "keyBinding",
        "signatureScheme",
        "signatureAlgorithm"
      ],
      "properties": {
        "issuanceProtocol": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "oid4vci",
            "iso18013_5"
          ],
          "properties": {
            "oid4vci": {
              "$ref": "#/$defs/capabilityVersioned"
            },
            "iso18013_5": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "remotePresentationProtocol": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "oid4vp",
            "iso18013_7"
          ],
          "properties": {
            "oid4vp": {
              "$ref": "#/$defs/capabilityVersioned"
            },
            "iso18013_7": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "credentialFormat": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "vcdm20",
            "sdJwtVc",
            "isoMdoc"
          ],
          "properties": {
            "vcdm20": {
              "$ref": "#/$defs/capability"
            },
            "sdJwtVc": {
              "$ref": "#/$defs/capability"
            },
            "isoMdoc": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "credentialStatus": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "jwtValidity",
            "pkiCertValidity",
            "ietfTokenStatusList"
          ],
          "properties": {
            "jwtValidity": {
              "$ref": "#/$defs/capability"
            },
            "pkiCertValidity": {
              "$ref": "#/$defs/capability"
            },
            "ietfTokenStatusList": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "identifiers": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "didWeb",
            "didWebvh",
            "didJwk",
            "httpsIss",
            "openidClientId",
            "x509Certificate"
          ],
          "properties": {
            "didWeb": {
              "$ref": "#/$defs/capability"
            },
            "didWebvh": {
              "$ref": "#/$defs/capability"
            },
            "didJwk": {
              "$ref": "#/$defs/capability"
            },
            "httpsIss": {
              "$ref": "#/$defs/capability"
            },
            "openidClientId": {
              "$ref": "#/$defs/capability"
            },
            "x509Certificate": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "keyBinding": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "keyBindingPop",
            "hardwareDeviceBinding"
          ],
          "properties": {
            "keyBindingPop": {
              "$ref": "#/$defs/capability"
            },
            "hardwareDeviceBinding": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "signatureScheme": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "joseJws",
            "cose"
          ],
          "properties": {
            "joseJws": {
              "$ref": "#/$defs/capability"
            },
            "cose": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "signatureAlgorithm": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "ecdsaEs256"
          ],
          "properties": {
            "ecdsaEs256": {
              "$ref": "#/$defs/capability"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "capability": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "supported"
      ],
      "properties": {
        "supported": {
          "type": "boolean"
        },
        "note": {
          "type": "string"
        }
      }
    },
    "capabilityVersioned": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "supported",
        "version"
      ],
      "properties": {
        "supported": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}
